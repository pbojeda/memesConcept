{
    "info": {
        "name": "Memes Concept API (With JWT Auth)",
        "description": "API for the Memes Concept MVP store. Updated with MVP-11 JWT Authentication.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:4000",
            "type": "string"
        },
        {
            "key": "jwt_token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Public - Storefront",
            "item": [
                {
                    "name": "List All Products",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/products",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "products"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Product by ID or Slug",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/products/:identifier",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "products",
                                ":identifier"
                            ],
                            "variable": [
                                {
                                    "key": "identifier",
                                    "value": "123"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Initiate Checkout",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"productId\": \"replace_with_product_id\",\n  \"quantity\": 1,\n  \"variant\": {\n    \"size\": \"L\",\n    \"color\": \"White\"\n  }\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/checkout",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "checkout"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Admin Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var data = pm.response.json();",
                                    "if (data.token) {",
                                    "    pm.collectionVariables.set(\"jwt_token\", data.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/admin/auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "admin",
                                "auth",
                                "login"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Admin - Protected",
            "item": [
                {
                    "name": "Create Product",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{jwt_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"New Postman Product\",\n  \"price\": 29.99,\n  \"description\": \"Awesome meme\",\n  \"images\": [\"https://placehold.co/400\"],\n  \"variants\": [\n    {\"size\": \"L\", \"color\": \"Black\", \"stock\": 10}\n  ]\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/admin/products",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "admin",
                                "products"
                            ]
                        }
                    }
                },
                {
                    "name": "Update Product",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{jwt_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"price\": 19.99\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/admin/products/:id",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "admin",
                                "products",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "replace_id_here"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Product",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{jwt_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/admin/products/:id",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "admin",
                                "products",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "replace_id_here"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Webhooks",
            "item": [
                {
                    "name": "Stripe Webhook (Requires raw Stripe Signature)",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/webhook",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "webhook"
                            ]
                        }
                    }
                }
            ]
        }
    ]
}